<launch>
    <!--file path constants-->
    <let name="pkg_share" value="$(find-pkg-share acit4820_project)"/>
    <let name="urdf_path" value="$(var pkg_share)/urdf/docking_station.urdf.xacro"/>

    <node pkg="robot_state_publisher" exec="robot_state_publisher" name="dock">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')"/>
        <param name="use_sim_time"      value="true"/>
    </node>
    
    <node pkg="rviz2" exec="rviz2" name="rviz2" args="-d $(var pkg_share)/rviz/display.rviz"/>
</launch>